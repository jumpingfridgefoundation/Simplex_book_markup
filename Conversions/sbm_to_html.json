{
  "schema_version": "1.0",
  "source_language": "SBM",
  "target_language": "HTML5",
  "description": "SimplexBook Markup to HTML5 conversion mapping with accessibility compliance",
  "accessibility_compliance": {
    "wcag_level": "AA",
    "screen_reader_support": true,
    "keyboard_navigation": true,
    "alt_text_required": true
  },
  "element_mappings": {
    "document_structure": {
      "sbm_book": {
        "html_element": "article",
        "attributes": {
          "aria-label": "Book content",
          "role": "main"
        },
        "accessibility_notes": "Main book container with proper ARIA labeling"
      },
      "sbm_chapter": {
        "html_element": "section",
        "attributes": {
          "aria-labelledby": "chapter-title-{id}",
          "role": "region"
        },
        "accessibility_notes": "Chapter as semantic section with title association"
      },
      "sbm_section": {
        "html_element": "section",
        "attributes": {
          "aria-labelledby": "section-title-{id}",
          "role": "region"
        }
      },
      "sbm_paragraph": {
        "html_element": "p",
        "attributes": {},
        "accessibility_notes": "Standard paragraph with proper semantic meaning"
      }
    },
    "text_formatting": {
      "sbm_bold": {
        "html_element": "strong",
        "attributes": {},
        "accessibility_notes": "Use <strong> for semantic emphasis rather than visual styling"
      },
      "sbm_italic": {
        "html_element": "em",
        "attributes": {},
        "accessibility_notes": "Use <em> for semantic emphasis"
      },
      "sbm_underline": {
        "html_element": "span",
        "attributes": {
          "style": "text-decoration: underline;"
        },
        "accessibility_notes": "Use <span> with inline style for non-semantic underline"
      },
      "sbm_code": {
        "html_element": "code",
        "attributes": {},
        "accessibility_notes": "Inline code with proper monospace font"
      },
      "sbm_superscript": {
        "html_element": "sup",
        "attributes": {},
        "accessibility_notes": "Superscript for mathematical notation and footnotes"
      },
      "sbm_subscript": {
        "html_element": "sub",
        "attributes": {},
        "accessibility_notes": "Subscript for chemical formulas and mathematical notation"
      }
    },
    "headings": {
      "sbm_h1": {
        "html_element": "h1",
        "attributes": {
          "id": "title-{id}"
        },
        "accessibility_notes": "Document title, should appear only once per page"
      },
      "sbm_h2": {
        "html_element": "h2",
        "attributes": {
          "id": "chapter-title-{id}"
        },
        "accessibility_notes": "Chapter titles, proper heading hierarchy"
      },
      "sbm_h3": {
        "html_element": "h3",
        "attributes": {
          "id": "section-title-{id}"
        },
        "accessibility_notes": "Section titles within chapters"
      },
      "sbm_h4": {
        "html_element": "h4",
        "attributes": {
          "id": "subsection-title-{id}"
        },
        "accessibility_notes": "Subsection titles"
      },
      "sbm_h5": {
        "html_element": "h5",
        "attributes": {
          "id": "minor-title-{id}"
        },
        "accessibility_notes": "Minor section titles"
      },
      "sbm_h6": {
        "html_element": "h6",
        "attributes": {
          "id": "subminor-title-{id}"
        },
        "accessibility_notes": "Subminor section titles"
      }
    },
    "lists": {
      "sbm_ordered_list": {
        "html_element": "ol",
        "attributes": {
          "role": "list"
        },
        "accessibility_notes": "Ordered list with proper semantic meaning"
      },
      "sbm_unordered_list": {
        "html_element": "ul",
        "attributes": {
          "role": "list"
        },
        "accessibility_notes": "Unordered list with proper semantic meaning"
      },
      "sbm_list_item": {
        "html_element": "li",
        "attributes": {},
        "accessibility_notes": "List items maintain proper nesting"
      },
      "sbm_definition_list": {
        "html_element": "dl",
        "attributes": {
          "role": "list"
        },
        "accessibility_notes": "Definition list for terms and descriptions"
      },
      "sbm_definition_term": {
        "html_element": "dt",
        "attributes": {},
        "accessibility_notes": "Definition term"
      },
      "sbm_definition": {
        "html_element": "dd",
        "attributes": {},
        "accessibility_notes": "Definition description"
      }
    },
    "links_and_references": {
      "sbm_link": {
        "html_element": "a",
        "attributes": {
          "href": "{url}",
          "role": "link"
        },
        "accessibility_notes": "Links must have descriptive text, not just URLs"
      },
      "sbm_internal_link": {
        "html_element": "a",
        "attributes": {
          "href": "#{id}",
          "role": "link"
        },
        "accessibility_notes": "Internal links for navigation within document"
      },
      "sbm_citation": {
        "html_element": "cite",
        "attributes": {},
        "accessibility_notes": "Citations and references to other works"
      }
    },
    "tables": {
      "sbm_table": {
        "html_element": "table",
        "attributes": {
          "role": "table"
        },
        "accessibility_notes": "Tables must have proper headers and captions"
      },
      "sbm_table_row": {
        "html_element": "tr",
        "attributes": {},
        "accessibility_notes": "Table rows"
      },
      "sbm_table_header": {
        "html_element": "th",
        "attributes": {
          "scope": "col"
        },
        "accessibility_notes": "Table headers with scope attribute"
      },
      "sbm_table_cell": {
        "html_element": "td",
        "attributes": {},
        "accessibility_notes": "Table data cells"
      },
      "sbm_table_caption": {
        "html_element": "caption",
        "attributes": {},
        "accessibility_notes": "Table captions for screen readers"
      }
    },
    "media_elements": {
      "sbm_image": {
        "html_element": "img",
        "attributes": {
          "src": "{src}",
          "alt": "{alt_text}",
          "role": "img"
        },
        "accessibility_notes": "Images require meaningful alt text for accessibility"
      },
      "sbm_audio": {
        "html_element": "audio",
        "attributes": {
          "controls": "",
          "role": "application"
        },
        "accessibility_notes": "Audio elements must have controls for accessibility"
      },
      "sbm_video": {
        "html_element": "video",
        "attributes": {
          "controls": "",
          "role": "application"
        },
        "accessibility_notes": "Video elements require controls and should have captions"
      },
      "sbm_figure": {
        "html_element": "figure",
        "attributes": {
          "role": "figure"
        },
        "accessibility_notes": "Figures for grouping media with captions"
      },
      "sbm_figure_caption": {
        "html_element": "figcaption",
        "attributes": {},
        "accessibility_notes": "Figure captions for media descriptions"
      }
    },
    "mathematical_content": {
      "sbm_math": {
        "html_element": "span",
        "attributes": {
          "class": "math",
          "role": "math"
        },
        "accessibility_notes": "Mathematical content should use MathML when possible"
      },
      "sbm_formula": {
        "html_element": "span",
        "attributes": {
          "class": "formula",
          "role": "math"
        },
        "accessibility_notes": "Mathematical formulas and equations"
      }
    },
    "special_elements": {
      "sbm_blockquote": {
        "html_element": "blockquote",
        "attributes": {
          "role": "region",
          "aria-label": "blockquote"
        },
        "accessibility_notes": "Blockquotes for quoted content"
      },
      "sbm_horizontal_rule": {
        "html_element": "hr",
        "attributes": {
          "role": "separator"
        },
        "accessibility_notes": "Horizontal rules as content separators"
      },
      "sbm_line_break": {
        "html_element": "br",
        "attributes": {},
        "accessibility_notes": "Line breaks for poetic formatting"
      },
      "sbm_space": {
        "html_element": "span",
        "attributes": {
          "class": "whitespace"
        },
        "accessibility_notes": "Preserved whitespace"
      }
    },
    "accessibility_specific": {
      "sbm_aria_label": {
        "html_element": "aria-label",
        "attributes": "{text}",
        "accessibility_notes": "ARIA labels for screen reader context"
      },
      "sbm_aria_describedby": {
        "html_element": "aria-describedby",
        "attributes": "{id_list}",
        "accessibility_notes": "ARIA description associations"
      },
      "sbm_skip_link": {
        "html_element": "a",
        "attributes": {
          "href": "#main-content",
          "class": "skip-link"
        },
        "accessibility_notes": "Skip links for keyboard navigation"
      }
    }
  },
  "conversion_rules": {
    "attribute_conversion": {
      "title": "Convert SBM attributes to HTML attributes",
      "rules": [
        {
          "sbm_attr": "id",
          "html_attr": "id",
          "transformation": "direct"
        },
        {
          "sbm_attr": "class",
          "html_attr": "class",
          "transformation": "direct"
        },
        {
          "sbm_attr": "lang",
          "html_attr": "lang",
          "transformation": "direct"
        },
        {
          "sbm_attr": "ref",
          "html_attr": "href",
          "transformation": "convert_to_url"
        }
      ]
    },
    "content_conversion": {
      "title": "Content transformation rules",
      "rules": [
        {
          "rule": "Escape special HTML characters",
          "examples": ["&", "<", ">", "\"", "'"]
        },
        {
          "rule": "Preserve line breaks in appropriate elements",
          "applicable_elements": ["pre", "code"]
        },
        {
          "rule": "Handle mathematical notation",
          "methods": ["MathML", "Unicode symbols", "LaTeX rendering"]
        }
      ]
    }
  },
  "accessibility_guidelines": {
    "required_elements": {
      "document_language": {
        "element": "html",
        "attribute": "lang",
        "description": "Document language declaration"
      },
      "page_title": {
        "element": "title",
        "location": "head",
        "description": "Descriptive page title"
      },
      "main_content": {
        "element": "main",
        "id": "main-content",
        "description": "Main content landmark"
      },
      "navigation": {
        "element": "nav",
        "aria-label": "navigation",
        "description": "Navigation landmarks"
      }
    },
    "keyboard_navigation": {
      "focus_management": "Proper tab order and focus indicators",
      "skip_links": "Provide skip navigation links",
      "interactive_elements": "All interactive elements must be keyboard accessible"
    },
    "screen_reader_support": {
      "semantic_markup": "Use proper HTML5 semantic elements",
      "aria_attributes": "Provide meaningful ARIA labels and descriptions",
      "heading_structure": "Logical heading hierarchy (h1-h6)",
      "list_structure": "Proper list nesting and semantic meaning"
    }
  },
  "example_conversions": {
    "simple_book": {
      "sbm_code": "::book title=\"My Book\"\n::chapter title=\"Chapter 1\"\n::p This is a paragraph.\n::/chapter\n::/book",
      "html_output": "<article aria-label=\"Book content\" role=\"main\">\n  <h1 id=\"title-1\">My Book</h1>\n  <section aria-labelledby=\"chapter-title-1\" role=\"region\">\n    <h2 id=\"chapter-title-1\">Chapter 1</h2>\n    <p>This is a paragraph.</p>\n  </section>\n</article>"
    },
    "accessible_list": {
      "sbm_code": "::ul\n::li First item\n::li Second item\n::/ul",
      "html_output": "<ul role=\"list\">\n  <li>First item</li>\n  <li>Second item</li>\n</ul>"
    },
    "accessible_image": {
      "sbm_code": "::figure\n::img src=\"chart.png\" alt=\"Bar chart showing sales data for Q1-Q4\"\n::caption Sales performance for 2024\n::/figure",
      "html_output": "<figure role=\"figure\">\n  <img src=\"chart.png\" alt=\"Bar chart showing sales data for Q1-Q4\" role=\"img\">\n  <figcaption>Sales performance for 2024</figcaption>\n</figure>"
    }
  },
  "version": "2.0",
  "last_updated": "2025-11-23",
  "compatibility": {
    "html5": true,
    "xhtml5": true,
    "wcag_2_1_aa": true,
    "screen_readers": ["JAWS", "NVDA", "VoiceOver", "TalkBack"]
  }
}